<div class = "row">
        <div class="col-xs-12 col-md-6 col-md-push-3">
<div class="box box-success col-xs-12">
            <div class="box-header with-border">
              <h3 class="box-title">Announcements</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body col-xs-12">
              <ul class="products-list product-list-in-box">
                <% @announcements.each do |a|%>
  
                <li class="item col-xs-12">
                  <div class="product-info">
                      <%= link_to a.title, announcement_path(a), :class => 'product-title' %>
                    <br>
                    <h6 class="label label-default "><%= a.created_at.to_date %></h6>
                    <h6 class="label label-warning "><%= a.subject.title %></h6>
                    
                  </div>
                </li>
                <% end %>

                <!-- /.item -->
              </ul>
            </div>
            <!-- /.box-body -->
            <div class="box-footer text-center">
              <%= link_to 'View more', announcements_path, :class => 'btn btn-sm btn-info btn-flat col-xs-12 view-more' %>
            </div>
            <!-- /.box-footer -->
          </div>
        
          <!-- /.box -->
        </div>

        <div class="col-xs-12 col-md-6 col-md-push-3">
            <div class="box box-success col-xs-12">
                        <div class="box-header with-border">
                          <h3 class="box-title">Subjects</h3>
                        </div>
                        <!-- /.box-header -->
                        <div class="box-body col-xs-12">
                          <ul class="products-list product-list-in-box">
                            <% current_user.subjects.each do |s|%>
              
                            <li class="item col-xs-12">
                              <div class="product-info">
                                  <%= link_to s.title, subject_path(s), :class => 'product-title' %>
                                <br>
                              </div>
                            </li>
                            <% end %>
            
                            <!-- /.item -->
                          </ul>
                        </div>
                        <!-- /.box-body -->
                        <div class="box-footer text-center">
                          <%= link_to 'View more', announcements_path, :class => 'btn btn-sm btn-info btn-flat col-xs-12 view-more' %>
                        </div>
                        <!-- /.box-footer -->
                      </div>
                    
                      <!-- /.box -->
                    </div>
</div>