<div class = "row">
        <div class="col-xs-12 col-md-8 col-md-push-2">
<div class="box box-success col-xs-12">
            <div class="box-header with-border">
              <h3 class="box-title">Student</h3>
            </div>
            <!-- /.box-header -->
            <div class="box-body col-xs-12">
              <ul class="products-list product-list-in-box student-detail-show">
                   <h5>Title:</h5>
                   <h5><%= @announcement.title %></h5>
                   <h5>Content:</h5>
                   <h5><%= @announcement.content %></h5>
                   <h5>Subject:</h5>
                   <% if @announcement.subject %>
                      <h5><%= @announcement.subject.title %></h5>
                    <% else %>
                      <h5>All</h5>
                    <% end%>
                <!-- /.item -->
              </ul>
            </div>
            <!-- /.box-body -->
            <div class="box-footer text-center">
                <div class = "col-xs-12">
                <%= link_to "Edit", edit_admin_announcement_path(@announcement), :class => 'btn btn-sm btn-success btn-flat col-xs-12 col-md-3 col-md-push-2 view-more'%>
                <%= link_to "Delete", admin_announcement_path(@announcement),  method: :delete, data: { confirm: 'Are you sure?' },  :class => 'btn btn-sm btn-danger btn-flat col-xs-12 col-md-3 col-md-push-4 view-more'%>
                </div>
            </div>
            <!-- /.box-footer -->
          </div>
        
          <!-- /.box -->
        </div>

</div>